{
  "manifest_version": 3,
  "name": "ClipKeeper",
  "version": "1.0",
  "description": "A smart clipboard manager that automatically saves and organizes everything you copy, making it instantly accessible when you need it.",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
